<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Metrolib.Controls"
                    xmlns:metrolib="clr-namespace:Metrolib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="FlatIconButton.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:FolderOpenButton}" BasedOn="{StaticResource {x:Type controls:FlatIconButton}}">
        <Setter Property="Icon" Value="{x:Static metrolib:Icons.FolderOpen}" />
    </Style>
</ResourceDictionary>