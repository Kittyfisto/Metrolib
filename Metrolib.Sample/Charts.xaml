<UserControl x:Class="Metrolib.Sample.Charts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:metrolib="clr-namespace:Metrolib;assembly=Metrolib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="This">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Type: " />
            <RadioButton Content="Normal " x:Name="Normal" Checked="OnNormalChecked" />
            <RadioButton Content="Stacked " x:Name="Stacked" Checked="OnStackedChecked" />
        </StackPanel>
        <metrolib:LineChart Margin="8"
                            Grid.Row="1"
                            x:Name="PART_Chart">
            
        </metrolib:LineChart>
    </Grid>
</UserControl>
