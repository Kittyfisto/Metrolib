<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:network="clr-namespace:Metrolib.Controls.Charts.Network"
                    xmlns:metrolib="clr-namespace:Metrolib">

    <Style TargetType="{x:Type network:NetworkChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type network:NetworkChart}">
                    <metrolib:NetworkPanel x:Name="PART_Panel" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>