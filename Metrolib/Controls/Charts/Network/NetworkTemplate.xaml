<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metrolib="clr-namespace:Metrolib"
                    xmlns:network="clr-namespace:Metrolib.Controls.Charts.Network">

    <Style TargetType="{x:Type network:NetworkChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type network:NetworkChart}">
                    <ItemsControl ItemsSource="{TemplateBinding Nodes}"
                                  ItemTemplate="{TemplateBinding NodeTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <network:NetworkPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>