<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Metrolib.Controls">

    <Style TargetType="{x:Type controls:MarkdownPresenter}">
        <Setter Property="Background" Value="White" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:MarkdownPresenter}">
                    <controls:FlatTextBlock x:Name="PART_TextBlock"
                                            Background="{TemplateBinding Background}"
                                            TextWrapping="{TemplateBinding TextWrapping}"
                                            TextTrimming="{TemplateBinding TextTrimming}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>